#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define N 10

int main(void)
{
	int array[N], i = 0, maxNum = 0;
	srand(time(NULL));

	printf("initial array:\n");
	for (i = 0; i < N; i++)
	{
		array[i] = -100 + rand() % 200;
		printf("%4d ", array[i]);
	}

	maxNum = array[0];

	for (i = 0; i < N; i++)
	{
		if (maxNum < array[i])
			maxNum = array[i];
	}
	printf("\n\nmaxNum = %d\n", maxNum);
	printf("\nfinal array:\n");
	for (i = 0; i < N; i++)
	{
		if (array[i] < 0)
			array[i] = array[i] / maxNum;
		printf("%4d ", array[i]);
	}
	printf("\n");
	system("pause");
	return 0;
}
